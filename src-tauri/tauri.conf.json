{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "kalanchoe-editor",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
			"clipboard": {
				"readText": true,
				"writeText": true
			},
			"fs": {
				"all": true,
				"scope": ["$APP/**", "$DESKTOP/**", "$RESOURCE/*"]
			},
			"path": {
				"all": true
			},
			"protocol": {
				"all": true,
				"assetScope": ["$APP/**", "$DESKTOP/**", "$RESOURCE/*"]
			},
			"shell": {
				"all": true,
				"scope": [
					{
						"name": "bash",
						"cmd": "bash",
						"args": true
					}
				]
			}
		},
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "dev.cristianofromagio.kalanchoe",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
			"resources": [
				"resources/*"
			],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Kalanchoe Editor",
        "width": 800
      }
    ]
  }
}
